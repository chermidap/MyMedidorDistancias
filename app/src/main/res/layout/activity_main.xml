<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.15">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dip">

                <TextView android:id="@+id/cabecera1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Ciudad"
                    android:width="160dp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:background="#5a1eff37" />

                <TextView android:id="@+id/cabecera2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Distancia"
                    android:width="160dp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:background="#5a1eff37" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dip">

                <TextView android:id="@+id/ciudad_madrid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Madrid"
                    android:width="160dp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewMad"
                    android:layout_column="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dip">

                <TextView android:id="@+id/ciudad_barcelona"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Barcelona"
                    android:width="160dp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2Bcn"
                    android:layout_column="1" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dip">

                <TextView android:id="@+id/ciudad_valencia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Valencia"
                    android:width="160dp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewVal"
                    android:layout_column="1" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dip">

                <TextView android:id="@+id/ciudad_sevilla"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sevilla"
                    android:width="160dp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewSev"
                    android:layout_column="1" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dip">

                <TextView android:id="@+id/ciudad_zaragoza"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Zaragoza"
                    android:width="160dp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewZgz"
                    android:layout_column="1" />

            </TableRow>
        </TableLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calcula Distancias"
            android:id="@+id/btnShowLocation"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.07" />

        <TextView android:id="@+id/localizacion"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Mi posicion"
            android:width="160dp"
            android:textColor="@android:color/black"
            android:textAlignment="center" />



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.15">

            <TextView
                android:layout_width="101dp"
                android:layout_height="match_parent"
                android:text="Latitud"
                android:id="@+id/textViewLat"
                android:layout_weight="0.05" />
            <TextView
                android:layout_width="101dp"
                android:layout_height="match_parent"
                android:id="@+id/textViewLatResul"
                android:layout_weight="0.05" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Longitud"
                android:id="@+id/textViewLon"
                android:layout_weight="0.08" />
            <TextView
                android:layout_width="101dp"
                android:layout_height="match_parent"
                android:id="@+id/textViewLonResul"
                android:layout_weight="0.05" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:id="@+id/buttonReset"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</RelativeLayout>
